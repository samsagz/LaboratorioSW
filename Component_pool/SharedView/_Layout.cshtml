<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AgroApp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("cssStyles", required: false)

</head>
<body>

    <nav class="navbar navbar-expand-lg bg-dark text-uppercase fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="@Url.Action("Index", "Home")">Agro App</a>
            <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item mx-0 mx-lg-1">
                        @Html.ActionLink("Inicio", "Index", "Home", new { @Class = "nav-link py-3 px-0 px-lg-3 rounded" })
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        @Html.ActionLink("Acerca de", "About", "Home", new { @Class = "nav-link py-3 px-0 px-lg-3 rounded" })
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        @Html.ActionLink("Contacto", "Contact", "Home", new { @Class = "nav-link py-3 px-0 px-lg-3 rounded" })
                    </li>
                    <!--B-topbar-modulo-->
                    
                    <li class="nav-item mx-0 mx-lg-1">
                        @Html.ActionLink("Dashboard", "Dashboard", "Home", new { @Class = "nav-link py-3 px-0 px-lg-3 rounded" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container body-content">
        <hr />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AgroApp</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
